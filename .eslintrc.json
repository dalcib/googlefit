{
  "root": true,
  "extends": [
    "universe",
    "universe/node",
    "universe/web",
    "universe/native",
    "universe/shared/typescript-analysis"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.d.ts"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "rules": {
    "import/order": [
      2,
      {
        "alphabetize": {
          "order": "ignore"
        }
      }
    ]
  }
}
